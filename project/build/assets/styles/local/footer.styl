  opacity 1
  // height 52px
  padding 20px 0 0px 0
  p
    font-size: 11px;
    opacity: .5;
    padding 0
    margin 0
    display block
  a
    font-size: 11px;
    color: inherit;

    &:hover
      text-decoration underline
